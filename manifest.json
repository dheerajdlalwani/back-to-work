{
  "name": "Back To Work",

  "description": "Get back to doing what you're supposed to be doing with Back To Work",

  "version": "0.0.0",

  "manifest_version": 2,

  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },

  "permissions": ["storage"],

  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Back To Work"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  }
}
